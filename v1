def 99Bottles():
  i = 99
  while i > 0:
    print (i + ' bottles of beer on the wall, ' + i + ' bottles of beer.')
    i -= 1
    if i == 0:
      print ('Take on down and pass it around, no more bottles of beer on the wall.')
    else:
      print ('Take one down and pass it around, ' + i + ' bottles of beer on the wall.')
    
99Bottles()
